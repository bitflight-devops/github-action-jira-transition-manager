{
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["dist/**/*", "tests/**/*"]
}
