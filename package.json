{
  "name": "github-action-jira-transition-manager",
  "version": "1.1.0",
  "description": "This action will transition the list of Jira issues provided between states, or it will display the available transitions and the current issue state.",
  "main": "dist/index.js",
  "sideEffects": false,
  "displayName": "bitflight-devops/github-action-jira-transition-manager",
  "repository": {
    "type": "git",
    "url": "git@github.com:bitflight-devops/github-action-jira-transition-manager.git"
  },
  "bugs": {
    "url": "https://github.com/bitflight-devops/github-action-jira-transition-manager/issues"
  },
  "keywords": ["actions", "github", "node22", "jira", "tickets"],
  "author": "Jamie Nelson <jamie@wearsafe.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "NODE_ENV=testing vitest run",
    "test:watch": "NODE_ENV=testing vitest",
    "test-ci": "NODE_ENV=testing vitest run --reporter=default --reporter=junit --outputFile=junit.xml",
    "build": "rimraf dist && tsc && ncc build lib/index.js -o dist --source-map --license licenses.txt && yarn build:e2e",
    "build:e2e": "tsc --project e2e/tsconfig.json --outDir e2e/dist",
    "format": "prettier --write . --config .prettierrc.cjs --ignore-unknown",
    "lint": "eslint --color ./src/ ./__tests__/",
    "prelint": "yarn run format && tsc --project tsconfig.json --noemit",
    "lint:fix": "yarn lint --fix",
    "lint:markdown:fix": "yarn lint:markdown --fix",
    "lint:markdown": "markdownlint \"**/*.md\" --config=.markdownlint.json --ignore-path=.markdownlintignore",
    "all": "yon run build && yon run format && yon run lint && yon run package && yon test",
    "stylelint-check": "stylelint-config-prettier-check",
    "commit": "git-cz",
    "pre-commit": "lint-staged && yon run build && git add dist && yarn run generate-docs",
    "preversion": "echo 'Running test';yon test",
    "version": "echo 'Run versioning commands';yon generate-docs;echo \"::set-output name=tag::v${npm_package_version}\"",
    "postversion": "echo 'Running post versioning commands';git push --tags -f && git push && echo \"Successfully released version $npm_package_version!\"",
    "generate-docs": "github-action-readme-generator && prettier --write .ghadocs.json README.md && git add .ghadocs.json README.md",
    "prepare": "husky && git config --global rebase.autosquash true",
    "pre-push": "echo 'Running pre-push checks'; exit 0",
    "e2e:up": "cd e2e/docker && docker compose up -d",
    "e2e:down": "cd e2e/docker && docker compose down -v",
    "e2e:setup": "node e2e/dist/scripts/setup-jira.js",
    "e2e:wait": "node e2e/dist/scripts/wait-for-jira.js",
    "e2e:seed": "node e2e/dist/scripts/seed-jira.js",
    "e2e:test": "NODE_ENV=testing vitest run --config vitest.e2e.config.ts",
    "e2e:logs": "cd e2e/docker && docker compose logs",
    "e2e:all": "yarn e2e:up && yarn e2e:setup && yarn e2e:wait && yarn e2e:seed && yarn e2e:test",
    "e2e:snapshot:save": "node e2e/dist/scripts/snapshot-save.js",
    "e2e:snapshot:restore": "node e2e/dist/scripts/snapshot-restore.js",
    "e2e:snapshot:check": "node e2e/dist/scripts/snapshot-check.js",
    "e2e:fast": "yarn e2e:snapshot:check --quiet && yarn e2e:snapshot:restore --force && yarn e2e:up && yarn e2e:wait && yarn e2e:test || yarn e2e:all"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"],
    "rules": {
      "body-max-length": [0],
      "body-max-line-length": [0],
      "footer-max-length": [0],
      "footer-max-line-length": [0],
      "header-max-length": [0]
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": ["src", "dist"],
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/github": "^7.0.0",
    "@octokit/rest": "^22.0.1",
    "ansi-colors": "^4.1.3",
    "is-plain-object": "^5.0.0",
    "jira.js": "^5.2.2",
    "lodash": "^4.17.21",
    "node-fetch": "2",
    "tslib": "^2.8.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@commitlint/cli": "^20",
    "@commitlint/config-conventional": "^20",
    "@commitlint/prompt": "^20",
    "@eslint/js": "^9",
    "@github/prettier-config": "^0.0.6",
    "@swc/core": "^1.15.10",
    "@tsconfig/node22": "^22.0.5",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.23",
    "@types/nconf": "^0.10.7",
    "@types/node": "^25.0.9",
    "@types/node-fetch": "^2.6.13",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "@typescript-eslint/typescript-estree": "^8",
    "@vercel/ncc": "^0.38.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-prettier": "^10",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-json-schema-validator": "^6",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12",
    "eslint-plugin-sonarjs": "^3",
    "eslint-plugin-unicorn": "^62",
    "github-action-readme-generator": "1.8.9",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "jsonc-eslint-parser": "^2.4.2",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "nock": "^13.5.6",
    "prettier": "^3.8.0",
    "prettier-plugin-sh": "^0.18.0",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "sinon": "^19.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0",
    "yaml-eslint-parser": "^2.0.0",
    "yarn-or-npm": "^3.0.1"
  },
  "lint-staged": {
    "{src,__tests__}/**/*.js": "eslint --fix",
    "*.ts": ["eslint --fix"]
  },
  "optionalDependencies": {
    "@swc/core-darwin-x64": "^1.15.10"
  }
}
