{
  "name": "github-action-jira-transition-manager",
  "version": "1.1.0",
  "description": "This action will transition the list of Jira issues provided between states, or it will display the available transitions and the current issue state.",
  "type": "module",
  "main": "dist/index.js",
  "sideEffects": false,
  "displayName": "bitflight-devops/github-action-jira-transition-manager",
  "repository": {
    "type": "git",
    "url": "git@github.com:bitflight-devops/github-action-jira-transition-manager.git"
  },
  "bugs": {
    "url": "https://github.com/bitflight-devops/github-action-jira-transition-manager/issues"
  },
  "keywords": [
    "actions",
    "github",
    "node22",
    "jira",
    "tickets"
  ],
  "author": "Jamie Nelson <jamie@wearsafe.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "NODE_ENV=testing vitest run",
    "test:watch": "NODE_ENV=testing vitest",
    "test-ci": "NODE_ENV=testing vitest run --reporter=default --reporter=junit --outputFile=junit.xml",
    "build": "rimraf dist && yarn package && yarn build:e2e",
    "package": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "build:e2e": "tsc --project e2e/tsconfig.json --outDir e2e/dist",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:markdown:fix": "yarn lint:markdown --fix",
    "lint:markdown": "markdownlint \"**/*.md\" --config=.markdownlint.json --ignore-path=.markdownlintignore",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run package && yarn test",
    "commit": "git-cz",
    "pre-commit": "lint-staged && yarn run build && git add dist && yarn run generate-docs",
    "preversion": "echo 'Running test';yarn test",
    "version": "echo 'Run versioning commands';yarn generate-docs;echo \"::set-output name=tag::v${npm_package_version}\"",
    "postversion": "echo 'Running post versioning commands';git push --tags -f && git push && echo \"Successfully released version $npm_package_version!\"",
    "generate-docs": "github-action-readme-generator && biome format --write .ghadocs.json README.md && git add .ghadocs.json README.md",
    "prepare": "husky && git config --global rebase.autosquash true",
    "pre-push": "echo 'Running pre-push checks'; exit 0",
    "e2e:up": "cd e2e/docker && docker compose up -d --quiet-pull",
    "e2e:down": "cd e2e/docker && docker compose down -v",
    "e2e:setup": "node e2e/dist/scripts/setup-jira-playwright.js",
    "e2e:setup:http": "node e2e/dist/scripts/setup-jira.js",
    "e2e:wait": "node e2e/dist/scripts/wait-for-jira.js",
    "e2e:seed": "node e2e/dist/scripts/seed-jira.js",
    "e2e:test": "NODE_ENV=testing vitest run --config vitest.e2e.config.ts",
    "e2e:logs": "cd e2e/docker && docker compose logs",
    "e2e:all": "yarn e2e:up && yarn e2e:setup && yarn e2e:wait && yarn e2e:seed && yarn e2e:test",
    "e2e:snapshot:save": "node e2e/dist/scripts/snapshot-save.js",
    "e2e:snapshot:restore": "node e2e/dist/scripts/snapshot-restore.js",
    "e2e:snapshot:check": "node e2e/dist/scripts/snapshot-check.js",
    "e2e:fast": "yarn e2e:snapshot:check --quiet && yarn e2e:snapshot:restore --force && yarn e2e:up && yarn e2e:wait && yarn e2e:test || yarn e2e:all"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-length": [
        0
      ],
      "body-max-line-length": [
        0
      ],
      "footer-max-length": [
        0
      ],
      "footer-max-line-length": [
        0
      ],
      "header-max-length": [
        0
      ]
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "dist"
  ],
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/github": "^7.0.0",
    "@octokit/rest": "^22.0.1",
    "ansi-colors": "^4.1.3",
    "is-plain-object": "^5.0.0",
    "jira.js": "^5.2.2",
    "lodash": "^4.17.21",
    "tslib": "^2.8.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@commitlint/cli": "^20",
    "@commitlint/config-conventional": "^20",
    "@commitlint/prompt": "^20",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@swc/core": "^1.15.10",
    "@tsconfig/node22": "^22.0.5",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.23",
    "@types/nconf": "^0.10.7",
    "@types/node": "^25.0.9",
    "@types/sinon": "^17.0.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^17.2.3",
    "github-action-readme-generator": "1.8.9",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "playwright": "^1.57.0",
    "rimraf": "^6.1.2",
    "rollup": "^4.56.0",
    "semantic-release": "^25.0.2",
    "sinon": "^19.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  },
  "optionalDependencies": {
    "@swc/core-darwin-x64": "^1.15.10"
  }
}
