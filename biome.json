{
  "$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!**/node_modules", "!**/dist", "!**/lib", "!**/coverage", "!**/e2e/dist", "!**/e2e/**/*.js", "!**/*.d.ts", "!**/commitlint.config.js", "!**/CHANGELOG.md", "!**/licenses.txt", "!**/.markdownlint.json", "!**/.markdownlintignore", "!**/.cspell.json", "!**/tsconfig.json", "!**/tsconfig.*.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf",
    "attributePosition": "auto"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "noStaticOnlyClass": "error",
        "noUselessSwitchCase": "error",
        "useFlatMap": "error",
        "useSimplifiedLogicExpression": "warn"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "noUnusedPrivateClassMembers": "error",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noBarrelFile": "off",
        "noReExportAll": "off"
      },
      "style": {
        "noNegationElse": "off",
        "useForOf": "warn",
        "useNodejsImportProtocol": "error",
        "useNumberNamespace": "error",
        "useBlockStatements": "off",
        "noNonNullAssertion": "warn",
        "useConst": "error",
        "useExportType": "error",
        "useImportType": "error",
        "useSingleVarDeclarator": "off",
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noDoubleEquals": "error",
        "noThenProperty": "error",
        "useIsArray": "error",
        "noExplicitAny": "off",
        "noConsole": "off",
        "noEmptyBlockStatements": "off",
        "noAsyncPromiseExecutor": "error",
        "noConfusingVoidType": "warn",
        "noConstEnum": "error",
        "noDuplicateClassMembers": "error",
        "noEmptyInterface": "error",
        "noExtraNonNullAssertion": "error",
        "noMisleadingInstantiator": "error",
        "noUnsafeDeclarationMerging": "error",
        "useAwait": "off",
        "useNamespaceKeyword": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error"
      }
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": true
    },
    "globals": ["console", "process", "NodeJS", "describe", "it", "test", "expect", "beforeAll", "afterAll", "beforeEach", "afterEach", "vi"]
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "overrides": [
    {
      "includes": ["**/*.test.ts", "**/*.spec.ts", "__tests__/**/*.ts", "e2e/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "style": {
            "noNonNullAssertion": "off"
          },
          "complexity": {
            "noStaticOnlyClass": "off"
          }
        }
      }
    },
    {
      "includes": ["e2e/**/*.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "warn"
          }
        }
      }
    },
    {
      "includes": ["**/*.json"],
      "formatter": {
        "lineWidth": 320
      }
    },
    {
      "includes": ["scripts/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ]
}
